<% if @datasets.empty? %>
  <div class="col-sm-6 col-sm-offset-3 card">
    <h2 class="text-center">There are no datasets</h2>
    <p class="text-center">Upload a dataset before creating your report.</p>
    <img class="center-block" src="/upload.gif" alt="">
  </div>
<%else%>
  <%= form_for(report) do |f| %>
    <% if report.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(report.errors.count, "error") %> prohibited this report from being saved:</h2>

        <ul>
        <% report.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.label(:name, "Report Title")%>
    <%= f.text_field :name, class:"form-control",required: true%>
<br>
    <div class="actions">
      <%= f.submit class:"from-control btn" %>
    </div>
  <% end %>
<% end %>
