<% if @datasets.empty? %>
  <div class="col-sm-6 col-sm-offset-3">
    <h1>There are no datasets</h1>
    <a href="/datasets/new">Upload a dataset.</a>
  </div>
<%else%>
  <%= form_for(report) do |f| %>
    <% if report.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(report.errors.count, "error") %> prohibited this report from being saved:</h2>

        <ul>
        <% report.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.label(:name, "Report Title")%>
    <%= f.text_field :name%>
    <%= f.select(:datasets, options_from_collection_for_select(@datasets, "id", "name", @datasets.last.id),{},{ :multiple => true, :size => @datasets.length}) %>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
<% end %>
